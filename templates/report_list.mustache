{{!
    @template block_adeptus_insights/report_list

    Report links list display mode.

    Context variables required for this template:
    * blockid - Block instance ID
    * contextid - Context ID
    * loading - Whether data is being loaded
    * max_items - Maximum items to display
    * show_category_badges - Whether to show category badges
    * click_action - Action when clicking (modal/newtab/expand)
    * show_refresh_button - Whether to show refresh button
    * context_type - Type of context filter
    * context_name - Name of context filter

    Example context (json):
    {
        "blockid": 123,
        "loading": true,
        "show_category_badges": true
    }
}}
<div class="block-adeptus-insights block-adeptus-links"
     data-blockid="{{blockid}}"
     data-contextid="{{contextid}}"
     data-mode="links"
     data-click-action="{{click_action}}"
     data-context-type="{{context_type}}"
     data-context-id="{{context_id}}">

    {{! Toolbar }}
    <div class="block-adeptus-toolbar">
        <div class="block-adeptus-category-filter">
            <div class="searchable-dropdown category-dropdown" data-placeholder="All Categories">
                <button type="button" class="searchable-dropdown-toggle" aria-haspopup="listbox" aria-expanded="false">
                    <span class="searchable-dropdown-text">All Categories</span>
                    <i class="fa fa-chevron-down searchable-dropdown-arrow"></i>
                </button>
                <div class="searchable-dropdown-menu" role="listbox">
                    <div class="searchable-dropdown-search">
                        <i class="fa fa-search"></i>
                        <input type="text" class="searchable-dropdown-input" placeholder="Search categories..." aria-label="Search categories">
                    </div>
                    <ul class="searchable-dropdown-list">
                        {{! Options populated by JavaScript }}
                    </ul>
                    <div class="searchable-dropdown-empty d-none">
                        <i class="fa fa-folder-open"></i>
                        <span>No categories found</span>
                    </div>
                </div>
            </div>
            {{! Hidden select for form compatibility }}
            <select class="category-filter-select d-none" aria-label="Filter by category">
                <option value="">All Categories</option>
            </select>
        </div>

        <div class="block-adeptus-toolbar-actions">
            {{#show_refresh_button}}
            <button type="button" class="btn btn-sm btn-link block-adeptus-refresh"
                    title="{{#str}}refresh, block_adeptus_insights{{/str}}"
                    aria-label="{{#str}}aria_refreshblock, block_adeptus_insights{{/str}}">
                <i class="fa fa-refresh"></i>
            </button>
            {{/show_refresh_button}}
        </div>
    </div>

    {{! Loading state }}
    <div class="block-adeptus-loading {{^loading}}d-none{{/loading}}">
        <div class="block-adeptus-skeleton">
            <div class="skeleton-item"></div>
            <div class="skeleton-item"></div>
            <div class="skeleton-item"></div>
        </div>
    </div>

    {{! Report list container }}
    <div class="block-adeptus-report-list {{#loading}}d-none{{/loading}}">
        {{! Reports will be inserted here by JavaScript }}
    </div>

    {{! Pagination controls }}
    <div class="block-adeptus-pagination d-none">
        <div class="pagination-info">
            <span class="pagination-showing"></span>
        </div>
        <div class="pagination-controls">
            <button type="button" class="btn btn-sm btn-outline-secondary pagination-prev" disabled>
                <i class="fa fa-chevron-left"></i> {{#str}}prev, block_adeptus_insights{{/str}}
            </button>
            <span class="pagination-pages"></span>
            <button type="button" class="btn btn-sm btn-outline-secondary pagination-next">
                {{#str}}next, block_adeptus_insights{{/str}} <i class="fa fa-chevron-right"></i>
            </button>
        </div>
    </div>

    {{! Empty state }}
    <div class="block-adeptus-empty d-none">
        <i class="fa fa-inbox fa-2x text-muted"></i>
        <p class="text-muted mt-2">{{#str}}noreports, block_adeptus_insights{{/str}}</p>
    </div>

    {{! Error state }}
    <div class="block-adeptus-error d-none">
        <i class="fa fa-exclamation-triangle fa-2x text-warning"></i>
        <p class="text-muted mt-2">{{#str}}errorloadingreports, block_adeptus_insights{{/str}}</p>
        <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-retry">
            <i class="fa fa-refresh"></i> {{#str}}refresh, block_adeptus_insights{{/str}}
        </button>
    </div>

    {{! Timestamp }}
    {{#show_timestamp}}
    <div class="block-adeptus-timestamp text-muted small mt-2 d-none">
        <i class="fa fa-clock-o"></i> <span class="timestamp-text"></span>
    </div>
    {{/show_timestamp}}
</div>

{{! Report item template (used by JavaScript) }}
<template id="block-adeptus-report-item-template-{{blockid}}">
    <div class="block-adeptus-report-item" data-slug="" data-source="" role="button" tabindex="0">
        <div class="report-item-content">
            <div class="report-item-icon-wrapper">
                <i class="fa fa-chart-bar"></i>
            </div>
            <div class="report-item-details">
                <div class="report-item-name"></div>
                {{#show_category_badges}}
                <div class="report-item-meta">
                    <span class="report-item-category badge"></span>
                </div>
                {{/show_category_badges}}
            </div>
            <div class="report-item-arrow">
                <i class="fa fa-chevron-right"></i>
            </div>
        </div>
    </div>
</template>
