{{!
    @template block_adeptus_insights/report_tabs

    Tabbed reports display mode - consistent design with embedded/modal views.

    Context variables required for this template:
    * blockid - Block instance ID
    * chart_height - Height of chart in pixels
    * show_refresh_button - Whether to show refresh button
    * show_timestamp - Whether to show timestamp

    Example context (json):
    {
        "blockid": 123,
        "chart_height": 200
    }
}}
<div class="block-adeptus-insights block-adeptus-tabs"
     data-blockid="{{blockid}}"
     data-contextid="{{contextid}}"
     data-mode="tabs"
     data-context-type="{{context_type}}"
     data-context-id="{{context_id}}"
     data-selected-reports="{{selected_reports_json}}">

    {{! Toolbar - minimal for tabs mode (reports are pre-selected in settings) }}
    {{#show_refresh_button}}
    <div class="block-adeptus-toolbar">
        <div class="block-adeptus-toolbar-actions ml-auto">
            <button type="button" class="btn btn-sm btn-link block-adeptus-refresh"
                    title="{{#str}}refresh, block_adeptus_insights{{/str}}"
                    aria-label="{{#str}}aria_refreshblock, block_adeptus_insights{{/str}}">
                <i class="fa fa-refresh"></i>
            </button>
        </div>
    </div>
    {{/show_refresh_button}}

    {{! Loading state }}
    <div class="block-adeptus-loading {{^loading}}d-none{{/loading}}">
        <div class="block-adeptus-skeleton-tabs">
            <div class="block-adeptus-skeleton-tab-bar">
                <div class="block-adeptus-skeleton-tab"></div>
                <div class="block-adeptus-skeleton-tab"></div>
                <div class="block-adeptus-skeleton-tab"></div>
            </div>
            <div class="block-adeptus-skeleton-tab-content" style="height: 200px;">
                <div class="block-adeptus-skeleton-chart-placeholder">
                    <i class="fa fa-bar-chart fa-3x text-muted"></i>
                </div>
            </div>
        </div>
    </div>

    {{! Tabs container }}
    <div class="block-adeptus-tabs-container {{#loading}}d-none{{/loading}}">
        {{! Tab navigation }}
        <ul class="nav nav-tabs block-adeptus-tab-nav" role="tablist">
            {{! Tabs will be inserted here by JavaScript }}
        </ul>

        {{! Tab content }}
        <div class="block-adeptus-tab-content">
            {{! Tab panes will be inserted here by JavaScript }}
        </div>
    </div>

    {{! Empty state }}
    <div class="block-adeptus-empty d-none text-center py-4">
        <i class="fa fa-folder-open-o fa-2x text-muted"></i>
        <p class="text-muted mt-2">{{#str}}noreports, block_adeptus_insights{{/str}}</p>
    </div>

    {{! Error state }}
    <div class="block-adeptus-error d-none text-center py-4">
        <i class="fa fa-exclamation-triangle fa-2x text-warning"></i>
        <p class="text-muted mt-2">{{#str}}errorloadingreports, block_adeptus_insights{{/str}}</p>
        <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-retry">
            <i class="fa fa-refresh"></i> {{#str}}refresh, block_adeptus_insights{{/str}}
        </button>
    </div>

    {{! Timestamp }}
    {{#show_timestamp}}
    <div class="block-adeptus-timestamp text-muted small mt-2 d-none">
        <i class="fa fa-clock-o"></i> <span class="timestamp-text"></span>
    </div>
    {{/show_timestamp}}
</div>

{{! Tab item template (used by JavaScript) }}
<template id="block-adeptus-tab-template-{{blockid}}">
    <li class="nav-item" role="presentation">
        <a class="nav-link" data-toggle="tab" href="#" role="tab" aria-selected="false">
            <span class="block-adeptus-tab-name"></span>
        </a>
    </li>
</template>

{{! Tab pane template with consistent design - mirrors embedded/modal design }}
<template id="block-adeptus-tab-pane-template-{{blockid}}">
    <div class="tab-pane block-adeptus-tab-pane fade" role="tabpanel">
        {{! Loading state for tab }}
        <div class="block-adeptus-tab-pane-loading text-center py-3">
            <i class="fa fa-spinner fa-spin"></i> {{#str}}loading, block_adeptus_insights{{/str}}
        </div>

        {{! Tab pane content wrapper }}
        <div class="block-adeptus-tab-pane-content d-none">
            {{! Meta bar with badges and date }}
            <div class="block-adeptus-tab-meta-bar d-flex justify-content-between align-items-center mb-2">
                <div class="block-adeptus-report-badges">
                    <span class="block-adeptus-report-category badge"></span>
                    <span class="block-adeptus-report-rowcount badge bg-secondary"><i class="fa fa-table"></i> <span class="block-adeptus-row-count-num">0</span> {{#str}}rows, block_adeptus_insights{{/str}}</span>
                </div>
                <span class="block-adeptus-report-date text-muted small"></span>
            </div>

            {{! Action bar with view toggle - consistent with embedded/modal }}
            <div class="block-adeptus-tab-action-bar d-flex justify-content-between align-items-center mb-2">
                {{! View toggle buttons }}
                <div class="block-adeptus-view-toggle btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-tab-view-toggle-btn active" data-view="table">
                        <i class="fa fa-table"></i> {{#str}}table, block_adeptus_insights{{/str}}
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-tab-view-toggle-btn" data-view="chart">
                        <i class="fa fa-bar-chart"></i> {{#str}}chart, block_adeptus_insights{{/str}}
                    </button>
                </div>

                {{! Export buttons - visibility controlled by JavaScript based on subscription }}
                <div class="block-adeptus-export-buttons d-flex gap-1">
                    <button class="btn btn-outline-danger btn-sm block-adeptus-tab-export" data-format="pdf" title="{{#str}}exportas_pdf, block_adeptus_insights{{/str}}">
                        <i class="fa fa-file-pdf-o"></i> {{#str}}exportformat_pdf, block_adeptus_insights{{/str}}
                    </button>
                    <button class="btn btn-outline-primary btn-sm block-adeptus-tab-export" data-format="csv" title="{{#str}}exportas_csv, block_adeptus_insights{{/str}}">
                        <i class="fa fa-file-excel-o"></i> {{#str}}exportformat_csv, block_adeptus_insights{{/str}}
                    </button>
                    <button class="btn btn-outline-secondary btn-sm block-adeptus-tab-export" data-format="json" title="{{#str}}exportas_json, block_adeptus_insights{{/str}}">
                        <i class="fa fa-file-code-o"></i> {{#str}}exportformat_json, block_adeptus_insights{{/str}}
                    </button>
                </div>
            </div>

            {{! Table View }}
            <div class="tab-table-view block-adeptus-tab-view">
                <div class="tab-table-container">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm tab-table">
                            <thead class="table-light"></thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <div class="tab-table-footer mt-2 d-flex justify-content-between align-items-center">
                        <span class="block-adeptus-row-count text-muted small"></span>
                        <div class="tab-table-pagination">
                            <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-tab-pagination-prev" disabled>
                                <i class="fa fa-chevron-left"></i>
                            </button>
                            <span class="block-adeptus-tab-pagination-info mx-2 small text-muted"></span>
                            <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-tab-pagination-next">
                                <i class="fa fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {{! Chart View }}
            <div class="block-adeptus-tab-chart-view block-adeptus-tab-view d-none">
                {{! Chart controls }}
                <div class="block-adeptus-chart-controls-wrapper mb-2">
                    <div class="block-adeptus-chart-controls d-flex flex-wrap align-items-end gap-2">
                        {{! Chart type selector }}
                        <div class="block-adeptus-control-group">
                            <label class="form-label small mb-1">{{#str}}charttype, block_adeptus_insights{{/str}}</label>
                            <select class="form-select form-select-sm block-adeptus-tab-chart-type">
                                <option value="bar">{{#str}}charttype_bar, block_adeptus_insights{{/str}}</option>
                                <option value="line">{{#str}}charttype_line, block_adeptus_insights{{/str}}</option>
                                <option value="pie">{{#str}}charttype_pie, block_adeptus_insights{{/str}}</option>
                                <option value="doughnut">{{#str}}charttype_doughnut, block_adeptus_insights{{/str}}</option>
                            </select>
                        </div>

                        {{! X-Axis selector }}
                        <div class="block-adeptus-control-group">
                            <label class="form-label small mb-1">{{#str}}xaxis, block_adeptus_insights{{/str}}</label>
                            <select class="form-select form-select-sm block-adeptus-tab-chart-x-axis">
                            </select>
                        </div>

                        {{! Y-Axis selector }}
                        <div class="block-adeptus-control-group">
                            <label class="form-label small mb-1">{{#str}}yaxis, block_adeptus_insights{{/str}}</label>
                            <select class="form-select form-select-sm block-adeptus-tab-chart-y-axis">
                            </select>
                        </div>
                    </div>
                </div>

                {{! Chart container }}
                <div class="block-adeptus-tab-chart-container" style="position: relative; height: {{chart_height}}px;">
                    <canvas class="block-adeptus-tab-chart"></canvas>
                </div>
            </div>
        </div>
    </div>
</template>
