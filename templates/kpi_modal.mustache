{{!
    @template block_adeptus_insights/kpi_modal

    Modal for displaying enhanced KPI metrics with interactive chart.

    This template is used for KPI card clicks when alerts feature is enabled.

    Example context (json):
    {
        "blockid": 123
    }
}}
<div class="block-adeptus-block-adeptus-kpi-modal-content" data-blockid="{{blockid}}">
    {{! Loading state }}
    <div class="block-adeptus-kpi-block-adeptus-modal-loading">
        <div class="text-center py-5">
            <i class="fa fa-spinner fa-spin fa-3x text-primary"></i>
            <p class="text-muted mt-3">{{#str}}loading, block_adeptus_insights{{/str}}</p>
        </div>
    </div>

    {{! Content }}
    <div class="block-adeptus-kpi-block-adeptus-modal-content-area d-none">
        {{! Header with metric and date range }}
        <div class="block-adeptus-kpi-modal-header d-flex justify-content-between align-items-start mb-4">
            {{! Current metric value }}
            <div class="block-adeptus-kpi-modal-metric">
                <div class="block-adeptus-kpi-modal-value-container">
                    <span class="block-adeptus-kpi-modal-value">--</span>
                </div>
                <div class="block-adeptus-kpi-modal-trends mt-2">
                    <span class="block-adeptus-kpi-modal-trend-baseline text-muted">--</span>
                    <span class="trend-separator mx-2">|</span>
                    <span class="block-adeptus-kpi-modal-trend-previous text-muted">--</span>
                </div>
            </div>

            {{! Date range filter }}
            <div class="block-adeptus-kpi-modal-date-filter">
                <label class="form-label small text-muted mb-1">{{#str}}daterange, block_adeptus_insights{{/str}}</label>
                <select class="form-select form-select-sm block-adeptus-kpi-date-range-select">
                    <option value="7d">{{#str}}last7days, block_adeptus_insights{{/str}}</option>
                    <option value="30d" selected>{{#str}}last30days, block_adeptus_insights{{/str}}</option>
                    <option value="90d">{{#str}}last90days, block_adeptus_insights{{/str}}</option>
                    <option value="all">{{#str}}alltime, block_adeptus_insights{{/str}}</option>
                </select>
            </div>
        </div>

        {{! Interactive chart }}
        <div class="block-adeptus-kpi-modal-block-adeptus-chart-container mb-4">
            <canvas class="block-adeptus-kpi-block-adeptus-modal-chart"></canvas>
        </div>

        {{! Statistics row }}
        <div class="block-adeptus-kpi-modal-stats">
            <div class="row g-3">
                <div class="col-4">
                    <div class="block-adeptus-kpi-stat-card">
                        <div class="block-adeptus-kpi-stat-label text-muted small">{{#str}}minimum, block_adeptus_insights{{/str}}</div>
                        <div class="block-adeptus-kpi-stat-value block-adeptus-kpi-stat-min">--</div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="block-adeptus-kpi-stat-card">
                        <div class="block-adeptus-kpi-stat-label text-muted small">{{#str}}maximum, block_adeptus_insights{{/str}}</div>
                        <div class="block-adeptus-kpi-stat-value block-adeptus-kpi-stat-max">--</div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="block-adeptus-kpi-stat-card">
                        <div class="block-adeptus-kpi-stat-label text-muted small">{{#str}}average, block_adeptus_insights{{/str}}</div>
                        <div class="block-adeptus-kpi-stat-value block-adeptus-kpi-stat-avg">--</div>
                    </div>
                </div>
            </div>
        </div>

        {{! Footer with data points info }}
        <div class="block-adeptus-kpi-modal-footer mt-3 pt-3 border-top d-flex justify-content-between align-items-center">
            <span class="block-adeptus-kpi-modal-datapoints text-muted small">
                <i class="fa fa-info-circle"></i> <span class="datapoints-count">0</span> {{#str}}datapoints, block_adeptus_insights{{/str}}
            </span>
            <span class="block-adeptus-kpi-modal-last-updated text-muted small"></span>
        </div>
    </div>

    {{! Error state }}
    <div class="block-adeptus-kpi-block-adeptus-modal-error d-none">
        <div class="text-center py-5">
            <i class="fa fa-exclamation-triangle fa-3x text-warning"></i>
            <p class="text-muted mt-3">{{#str}}errorloadingkpi, block_adeptus_insights{{/str}}</p>
            <button type="button" class="btn btn-outline-secondary block-adeptus-kpi-block-adeptus-modal-retry">
                <i class="fa fa-refresh"></i> {{#str}}refresh, block_adeptus_insights{{/str}}
            </button>
        </div>
    </div>
</div>
