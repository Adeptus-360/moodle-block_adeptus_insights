{{!
    @template block_adeptus_insights/kpi_grid

    KPI cards grid display mode.

    Context variables required for this template:
    * blockid - Block instance ID
    * kpi_columns - Number of columns (1-4)
    * show_refresh_button - Whether to show refresh button

    Example context (json):
    {
        "blockid": 123,
        "kpi_columns": 2
    }
}}
<div class="block-adeptus-insights block-adeptus-kpi"
     data-blockid="{{blockid}}"
     data-contextid="{{contextid}}"
     data-mode="kpi"
     data-columns="{{kpi_columns}}"
     data-context-type="{{context_type}}"
     data-context-id="{{context_id}}">

    {{! Toolbar }}
    <div class="block-adeptus-toolbar">
        <div class="block-adeptus-category-filter">
            <select class="form-select form-select-sm category-filter-select" aria-label="Filter by category">
                <option value="">All Categories</option>
                {{! Options will be populated by JavaScript }}
            </select>
        </div>

        <div class="block-adeptus-toolbar-actions">
            {{#show_refresh_button}}
            <button type="button" class="btn btn-sm btn-link block-adeptus-refresh"
                    title="{{#str}}refresh, block_adeptus_insights{{/str}}"
                    aria-label="{{#str}}aria_refreshblock, block_adeptus_insights{{/str}}">
                <i class="fa fa-refresh"></i>
            </button>
            {{/show_refresh_button}}
        </div>
    </div>

    {{! Loading state }}
    <div class="block-adeptus-loading {{^loading}}d-none{{/loading}}">
        <div class="block-adeptus-kpi-grid kpi-cols-{{kpi_columns}}">
            <div class="block-adeptus-kpi-card skeleton">
                <div class="skeleton-value"></div>
                <div class="skeleton-label"></div>
            </div>
            <div class="block-adeptus-kpi-card skeleton">
                <div class="skeleton-value"></div>
                <div class="skeleton-label"></div>
            </div>
            {{#kpi_columns}}
            {{#isGreaterThan2}}
            <div class="block-adeptus-kpi-card skeleton">
                <div class="skeleton-value"></div>
                <div class="skeleton-label"></div>
            </div>
            <div class="block-adeptus-kpi-card skeleton">
                <div class="skeleton-value"></div>
                <div class="skeleton-label"></div>
            </div>
            {{/isGreaterThan2}}
            {{/kpi_columns}}
        </div>
    </div>

    {{! KPI grid container }}
    <div class="block-adeptus-kpi-grid kpi-cols-{{kpi_columns}} {{#loading}}d-none{{/loading}}">
        {{! KPI cards will be inserted here by JavaScript }}
    </div>

    {{! Empty state }}
    <div class="block-adeptus-empty d-none text-center py-4">
        <i class="fa fa-tachometer fa-2x text-muted"></i>
        <p class="text-muted mt-2">{{#str}}noreports, block_adeptus_insights{{/str}}</p>
    </div>

    {{! Error state }}
    <div class="block-adeptus-error d-none text-center py-4">
        <i class="fa fa-exclamation-triangle fa-2x text-warning"></i>
        <p class="text-muted mt-2">{{#str}}errorloadingreports, block_adeptus_insights{{/str}}</p>
        <button type="button" class="btn btn-sm btn-outline-secondary block-adeptus-retry">
            <i class="fa fa-refresh"></i> {{#str}}refresh, block_adeptus_insights{{/str}}
        </button>
    </div>

    {{! Timestamp }}
    {{#show_timestamp}}
    <div class="block-adeptus-timestamp text-muted small mt-2 d-none">
        <i class="fa fa-clock-o"></i> <span class="timestamp-text"></span>
    </div>
    {{/show_timestamp}}
</div>

{{! KPI card template (used by JavaScript) }}
<template id="block-adeptus-kpi-card-template-{{blockid}}">
    <div class="block-adeptus-kpi-card" data-slug="" data-source="">
        <div class="kpi-card-icon">
            <i class="fa fa-chart-line"></i>
        </div>
        <div class="kpi-card-value"></div>
        <div class="kpi-card-label"></div>
        <div class="kpi-card-trend">
            <span class="trend-icon"></span>
            <span class="trend-value"></span>
        </div>
        <div class="kpi-card-sparkline">
            <canvas class="sparkline-chart" width="100" height="30"></canvas>
        </div>
    </div>
</template>
